#!/usr/bin/env node --harmony

'use strict';

var fs = require('fs');

var program = require('commander');
var prompt = require('prompt');

program
  .option('-u, --user [username]', 'MMS Username')
  .option('-a, --apiKey [apiKey]', 'MMS API Key')
  .option('-h, --host [host]', 'MMS Endpoint')
  .parse(process.argv);

var user = program.user;
var apiKey = program.apiKey;
var host = program.host;
var requiredFields = [];
if (!user) {
    requiredFields.push('user');
}
if (!apiKey) {
    requiredFields.push('apiKey');
}
if (!host) {
    host = '';
}

if (requiredFields.length > 0) {
    prompt.message = "Required Field";
    prompt.start();
    prompt.get(requiredFields, function (err, result) {
        if (err) {
            console.log("An error occurred");
        } else {
            if (!user) {
                user = result.user;
            }
            if (!apiKey) {
                apiKey = result.apiKey;
            }
            login(user, apiKey, host);
        }
    });
} else {
    login(user, apiKey, host);
}

function login(user, apiKey, host) {
    fs.writeFile("/tmp/mms-credentials", [user, apiKey, host].join(','), function(err) {
        if(err) {
            console.log(err);
        } else {
            console.log("Credentials saved to: "+'/tmp/mms-credentials');
        }
    });
}
